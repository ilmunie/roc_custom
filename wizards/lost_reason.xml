<?xml version="1.0"?>
<odoo>
        <record id="view_lost_reason_wizard" model="ir.ui.view">
            <field name="name">view_lost.reason.wizard</field>
            <field name="model">lost.reason.wizard</field>
            <field name="arch" type="xml">
                <form string="Lost">
                    
                    <group class="oe_title">
                        <field name="lost_reason_id" options="{'no_create':True,'no_quick_create':True,'no_open':True,'no_create_and_edit':True}"/>
                        <field name="observations"/>
                    </group>
                    <footer>
                        <button name="action_done" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="open_lost_wizard" model="ir.actions.act_window">
            <field name="name">Lead perdida</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lost.reason.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_lost_reason_wizard"/>
            <field name="target">new</field>
        </record>
</odoo>