<?xml version="1.0"?>
<odoo>
    <record id="roc_custom_lead_view_form" model="ir.ui.view">
        <field name="name">roc.custom.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="priority">1</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[last()]" position="replace">
                <form class="o_lead_opportunity_form">
                    <header>
                        <button name="create_new_ticket" type="object" string="Nuevo ticket" class="btn-primary"
                        attrs="{'invisible':[('type','=', 'lead')]}"/>
                        <button name="action_set_won_rainbowman" string="Ganado"
                            type="object" class="oe_highlight" data-hotkey="w" title="Mark as won"
                            attrs="{'invisible': ['|','|', ('active','=',False), ('probability', '=', 100), ('type', '=', 'lead')]}"/>
                        <button name="%(crm.crm_lead_lost_action)d" string="Perdido" data-hotkey="l" title="Marcar como perdido"
                            type="action" context="{'default_lead_id': active_id}" attrs="{'invisible': ['|', ('type', 'not in', ('lead','opportunity')), '&amp;',('active', '=', False),('probability', '&lt;', 100)]}"/>
                        <button name="%(crm.action_crm_lead2opportunity_partner)d" string="Convertir a oportunidad" type="action" help="Convertir a oportunidad"
                            class="oe_highlight" attrs="{'invisible': ['|', ('type', '=', 'opportunity'), ('active', '=', False)]}" data-hotkey="v"/>
                        <button name="toggle_active" string="Reactivar" type="object" data-hotkey="z"
                            attrs="{'invisible': ['|', ('probability', '&gt;', 0), ('active', '=', True)]}"/>
                        <button name="%(open_generale_sale_quotation_wizard)d" string="Generar presupuestos" type="action" class="oe_highlight"
                        attrs="{'invisible': [('type','=','lead')]}"/>
                        <field name="lead_stage_id" widget="statusbar"
                               options="{'clickable': '1'}"
                               attrs="{'invisible': ['|', ('active', '=', False), ('type', '=', 'opportunity')]}"/>
                        <field name="stage_id" widget="statusbar"
                            options="{'clickable': '1', 'fold_field': 'fold'}"
                            attrs="{'invisible': ['|', ('active', '=', False), ('type', '=', 'lead')]}"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_schedule_meeting" type="object"
                                class="oe_stat_button" icon="fa-calendar"
                                context="{'partner_id': partner_id}">
                                <div class="o_stat_info">
                                    <field name="calendar_event_count" class="o_stat_value"/>
                                    <span class="o_stat_text" attrs="{'invisible': [('calendar_event_count', '&lt;', 2)]}"> Reuniones</span>
                                    <span class="o_stat_text" attrs="{'invisible': [('calendar_event_count', '&gt;', 1)]}"> Reunión</span>
                                </div>
                            </button>
                    <button name="view_tickets" type="object" class="oe_stat_button" icon="fa-life-ring" >
                        <div class="o_stat_info">
                            <field name="helpdesk_ticket_ids" invisible="1"/>
                            <div class="o_field_widget o_stat_info">
                                <field name="active_ticket_count" nolabel="1" widget="statinfo"/>
                                <span class="o_stat_text">Tickets</span><br/>
                                <span class="o_stat_text">Activos</span>
                            </div>
                        </div>
                    </button>
                            <button name="action_view_pos_order" type="object" class="oe_stat_button" icon="fa-shipping-basket" attrs="{'invisible':[('pos_order_count','=',0)]}" >
                                <div class="o_stat_info">
                                    <field name="pos_order_ids" invisible="1"/>
                                    <field name="pos_order_count" widget="statinfo" string="Punto Venta"/>
                                </div>
                            </button>
                                <button name="action_schedule_job" type="object" class="oe_stat_button" icon="fa-wrench" attrs="{'invisible':[('type','=','lead')]}" readonly="True">
                                    <div class="o_stat_info">
                                        <field name="active_technical_job_count"/>
                                        <span>/</span>
                                        <field name="technical_job_count"/>
                                        <span class="o_stat_text" >Órdenes de trabajo</span>
                                    </div>
                                </button>
                            <button name="action_show_potential_duplicates" type="object"
                                class="oe_stat_button" icon="fa-star"
                                attrs="{'invisible': [('duplicate_lead_count', '&lt;', 1)]}">
                                <div class="o_stat_info">
                                    <field name="duplicate_lead_count" class="o_stat_value"/>
                                    <span class="o_stat_text" attrs="{'invisible': [('duplicate_lead_count', '&lt;', 2)]}">Leads similares</span>
                                    <span class="o_stat_text" attrs="{'invisible': [('duplicate_lead_count', '&gt;', 1)]}">Lead similar</span>
                                </div>
                            </button>
                            <button class="oe_stat_button" type="object" attrs="{'invisible': ['|', ('invoice_count', '=', 0), ('type', '=', 'lead')]}" name="action_open_so_account_move" icon="fa-book">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="invoice_total_amount" widget="monetary" options="{'currency_field': 'company_currency'}"/></span>
                                    <span class="o_stat_text"> Facturas</span>
                                    <field name="invoice_count" invisible="1"/>
                                </div>
                            </button>
                            <button class="oe_stat_button" type="object" attrs="{'invisible': ['|', ('invoice_count', '=', 0), ('type', '=', 'lead')]}" name="action_open_so_account_move_unpaid" icon="fa-bullhorn">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="invoice_unpaid_amount" widget="monetary" options="{'currency_field': 'company_currency'}"/></span>
                                    <span class="o_stat_text"> Debe</span>
                                    <field name="invoice_unpaid_count" invisible="1"/>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Perdido" bg_color="bg-danger" attrs="{'invisible': ['|', ('probability', '&gt;', 0), ('active', '=', True)]}"/>
                        <widget name="web_ribbon" title="Ganado" attrs="{'invisible': [('probability', '&lt;', 100)]}" />
                        <div class="oe_title">
                            <label for="name" string="Lead" attrs="{'invisible': [('type', '=', 'opportunity')]}"/>
                            <label for="name" attrs="{'invisible': [('type', '=', 'lead')]}"/>
                            <h1><field class="text-break" name="name" placeholder="e.g. Product Pricing"/></h1>
                            <h2 class="o_row no-gutters align-items-end">
                                <div class="col" attrs="{'invisible': [('type', '=', 'lead')]}">
                                    <label for="expected_revenue" class="oe_edit_only" />
                                    <div class="o_row">
                                        <field name="company_currency" invisible="1"/>
                                        <field name="expected_revenue" class="oe_inline" widget='monetary' options="{'currency_field': 'company_currency'}"/>
                                        <span class="oe_grey p-2" groups="crm.group_use_recurring_revenues"> + </span>
                                        <span class="oe_grey p-2" groups="!crm.group_use_recurring_revenues"> at </span>
                                    </div>
                                </div>
                                <div class="col" attrs="{'invisible': [('type', '=', 'lead')]}" groups="crm.group_use_recurring_revenues">
                                    <div class="o_row">
                                        <field name="recurring_revenue" class="pr-2 oe_inline" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                    </div>
                                </div>
                                <div class="col" attrs="{'invisible': [('type', '=', 'lead')]}" groups="crm.group_use_recurring_revenues">
                                    <div class="o_row">
                                        <field name="recurring_plan" class="oe_inline" placeholder="E.g. Monthly"
                                               attrs="{'required': [('recurring_revenue', '!=', 0)]}" options="{'no_create': True, 'no_open': True}"/>
                                        <span class="oe_grey p-2"> a </span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="oe_edit_only d-flex align-items-center">
                                        <label for="probability"/>
                                        <button class="btn btn-link" name="action_set_automated_probability" type="object"
                                                attrs="{'invisible': [('is_automated_probability', '=', True)]}">
                                            <i class="fa fa-gear" role="img" title="Switch to automatic probability" aria-label="Switch to automatic probability"></i>
                                        </button>
                                        <small class="oe_grey h6 mb0" attrs="{'invisible': [('is_automated_probability', '=', True)]}">
                                            <field class="mb0" name="automated_probability" force_save="1"/> %%
                                        </small>
                                    </div>
                                    <div id="probability" class="o_row d-flex">
                                        <field name="is_automated_probability" invisible="1"/>
                                        <field name="probability" widget="float" class="oe_inline"/>
                                        <span class="oe_grey"> %%</span>
                                    </div>
                                </div>
                            </h2>
                        </div>
                        <div invisible="1">
                                <field name="type" invisible="1"/>
                                <field name="is_blacklisted" invisible="1"/>
                                <field name="phone_blacklisted" invisible="1"/>
                                <field name="mobile_blacklisted" invisible="1"/>
                                <field name="email_state" invisible="1"/>
                                <field name="phone_state" invisible="1"/>
                                <field name="partner_email_update" invisible="1"/>
                                <field name="partner_phone_update" invisible="1"/>
                                <field name="date_conversion" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="user_company_ids" invisible="1"/>
                        </div>
                        <group name="lead_sheet" attrs="{'invisible': [('type', '=', 'opportunity')]}">
                            <group name="lead_left" string="Información del Contacto">
                                <label for="contact_name"/>
                                <div class="o_row">
                                    <field name="contact_name"/>
                                    <field name="title" placeholder="Prefix" domain="[]" options='{"no_open": True}'/>
                                </div>
                                <field name="partner_name"/>
                                <label for="street" string="Dirección"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                                <label for="email_from_group_lead_info" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <button name="mail_action_blacklist_remove" class="fa fa-ban text-danger"
                                        title="This email is blacklisted for mass mailings. Click to unblacklist."
                                        type="object" context="{'default_email': email_from}" groups="base.group_user"
                                        attrs="{'invisible': [('is_blacklisted', '=', False)]}"/>
                                    <field name="email_from" id="email_from_group_lead_info" string="Email" widget="email"/>
                                    <span class="fa fa-exclamation-triangle text-warning oe_edit_only"
                                        title="By saving this change, the customer email will also be updated."
                                        attrs="{'invisible': [('partner_email_update', '=', False)]}"/>
                                </div>
                                <label for="phone_group_lead_info" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <button name="phone_action_blacklist_remove" class="fa fa-ban text-danger"
                                        title="This phone number is blacklisted for SMS Marketing. Click to unblacklist."
                                        type="object" context="{'default_phone': phone}" groups="base.group_user"
                                        attrs="{'invisible': [('phone_blacklisted', '=', False)]}"/>
                                    <field name="phone" id="phone_group_lead_info" widget="phone"/>
                                    <span class="fa fa-exclamation-triangle text-warning oe_edit_only"
                                        title="By saving this change, the customer phone number will also be updated."
                                        attrs="{'invisible': [('partner_phone_update', '=', False)]}"/>
                                </div>
                                <label for="mobile_group_lead_info" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <button name="phone_action_blacklist_remove" class="fa fa-ban text-danger"
                                        title="This phone number is blacklisted for SMS Marketing. Click to unblacklist."
                                        type="object" context="{'default_mobile': mobile}" groups="base.group_user"
                                        attrs="{'invisible': [('mobile_blacklisted', '=', False)]}"/>
                                    <field name="mobile" id="mobile_group_lead_info" widget="phone"/>
                                </div>
                            </group>
                            <group name="lead_right" string="Categorización">
                                <field name="work_type_id" options="{'create': False,'create_edit': False}"/>
                                <field string="Productos de interés" name="intrest_tag_ids" widget="many2many_tags" options="{'create': False,'create_edit': False}"/>
                                <label for="safety_level"/>
                                <div>
                                    <field name="safety_level" widget="radio" options="{'horizontal': True}"/>
                                </div>
                                <field name="installation"/>
                                <field name="priority" widget="priority"/>
                                <field name="type_of_contact" widget="radio" />
                                <!--<field name="customer_concern" widget="radio" options="{'horizontal': True}"/>-->
                                <field name="company_concern" widget="priority"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True, 'no_open': True, 'no_create': True}"/>

                            </group>
                            <group name="lead_left_bottom" string="Equipo de trabajo">
                                <field name="team_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="user_id" options="{'no_open': True, 'no_create': True}" context="{'default_sales_team_id': team_id}" widget="many2one_avatar_user"/>
                            </group>
                            <group name="lead_right_bottom" string="Origen">
                                <field string="Medio" name="medium_id" options="{'create': False,'create_edit': False}" required="1"/>
                                <field string="Origen" name="source_id" options="{'create': False,'create_edit': False}"/>
                                <field string="Campaña" name="campaign_id" options="{'create': False,'create_edit': False}"/>
                                <field name="type_of_client"/>
                                <field name="referred_professional" context="{'default_professional':True}"/>
                            </group>
                        </group>
                        <group name="opportunity_sheet" attrs="{'invisible': [('type','=','lead')]}">
                            <group name="opportunity_left" string="Información del cliente">
                                <field name="partner_id" attrs="{'required':[('type','=','opportunity')]}"
                                    widget="res_partner_many2one"
                                    string="Cliente"
                                    context="{'res_partner_search_mode': type == 'opportunity' and 'customer' or False,
                                        'default_name': contact_name or partner_name,
                                        'default_street': street,
                                        'default_is_company': type == 'opportunity' and contact_name == False,
                                        'default_company_name': type == 'opportunity' and partner_name,
                                        'default_street2': street2,
                                        'default_city': city,
                                        'default_title': title,
                                        'default_state_id': state_id,
                                        'default_zip': zip,
                                        'default_country_id': country_id,
                                        'default_function': function,
                                        'default_phone': phone,
                                        'default_mobile': mobile,
                                        'default_email': email_from,
                                        'default_user_id': user_id,
                                        'default_team_id': team_id,
                                        'default_website': website,
                                        'show_vat': True,
                                    }"
                                />
                                <label for="email_from" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <button name="mail_action_blacklist_remove" class="fa fa-ban text-danger"
                                        title="This email is blacklisted for mass mailings. Click to unblacklist."
                                        type="object" context="{'default_email': email_from}" groups="base.group_user"
                                        attrs="{'invisible': [('is_blacklisted', '=', False)]}"/>
                                    <field name="email_from" string="Email" widget="email"/>
                                    <span class="fa fa-exclamation-triangle text-warning oe_edit_only"
                                        title="By saving this change, the customer email will also be updated."
                                        attrs="{'invisible': [('partner_email_update', '=', False)]}"/>
                                </div>
                                <label for="phone" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <field name="phone" widget="phone"/>
                                </div>
                                <label for="mobile_partner" class="oe_inline"/>
                                <div class="o_row o_row_readonly">
                                    <field name="mobile_partner" widget="phone"/>
                                </div>
                            </group>
                            <group name="opportunity_right" string="Categorización">
                                <field name="work_type_id" options="{'create': False,'create_edit': False}"/>
                                <field string="Productos de interés" name="intrest_tag_ids" widget="many2many_tags" options="{'create': False,'create_edit': False}"/>
                                <label for="safety_level"/>
                                <div>
                                    <field name="safety_level" widget="radio" options="{'horizontal': True}"/>
                                </div>
                                <field name="installation"/>
                                <field name="priority" widget="priority"/>
                                <field name="type_of_contact" widget="radio" />
                                <field name="company_concern" widget="priority"/>
                                <!--<field name="customer_concern" widget="radio" options="{'horizontal': True}"/>-->
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True, 'no_open': True, 'no_create': True}"/>

                            </group>
                            <group name="assigned_users" string="Equipo">
                                <field name="medium_written" invisible="1"/>
                                <field name="medium_id" attrs="{'invisible': [('medium_written','!=',False)]}" options="{'no_open': True, 'no_create': True}"/>
                                <field name="team_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="user_id" options="{'no_open': True, 'no_create': True}" context="{'default_sales_team_id': team_id}" widget="many2one_avatar_user"/>
                            </group>
                            <group name="processing" string="Procesamiento">
                                <field name="date_deadline"/>
                                <field name="last_call_date"/>
                                <field name="last_call_status"/>
                                <field name="lost_reason" attrs="{'invisible': [('active', '=', True)]}"/>
                            </group>
                        </group>
                        <notebook>

                            <page string="Notas internas" name="internal_notes">
                                <group name="other_info_lead" string="Otra información del Lead" attrs="{'invisible':[('type','!=','lead')]}">
                                    <group name="other_info_lead_left">
                                        <field name="function"/>
                                        <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                                    </group>
                                    <group name="other_info_lead_right">
                                        <field name="lang_id" options="{'no_open':True, 'no_create':True}"/>
                                        <field name="email_cc"/>
                                    </group>
                                </group>
                                <separator attrs="{'invisible':[('type','!=','lead')]}"/>
                                <label for="description" string="Notas internas"/>
                                <field name="description" placeholder="Añada una descripción..."/>
                            </page>
                            <page string="Visita" attrs="{'invisible':[('type','!=','opportunity')]}">
                                <group>
                                    <group>
                                        <field name="visit_payment_type" widget="radio" />
                                        <field name="estimated_visit_revenue" attrs="{'invisible':[('visit_payment_type','!=','to_bill')]}" />
                                        <field name="job_employee_ids" widget="many2many_tags" options="{'no_create': 1}" domain="[('technical','=', True)]"/>
                                        <field name="job_vehicle_ids" widget="many2many_tags" options="{'no_create': 1}" />
                                    </group>
                                    <group>
                                        <field name="visit_priority" widget="priority" />
                                        <field name="reminder_date"/>
                                        <field name="reminder_user_id" widget="many2one_avatar_user" options="{'no_create': 1, 'no_open': 1}" readonly="0"/>
                                        <field name="technical_job_tag_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True, 'color_field': 'color'}" />
                                        <field name="job_categ_ids" options="{'no_create':1}" widget="many2many_tags"/>
                                        <field name="job_duration"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="visit_internal_notes"/>
                                    <field name="stage_name" invisible="1"/>
                                </group>
                                <group string="Disponibilidad cliente" name="customer_availability" attrs="{'invisible': [('next_active_job_id', '!=', False)]}">
                                     <group>
                                        <field name="customer_availability_type"/>
                                     </group>
                                     <group>
                                         <field name="customer_visit_datetime" attrs="{'invisible': [('customer_availability_type', '!=', 'specific_date')]}"/>
                                         <field name="customer_av_visit_date" attrs="{'invisible': [('customer_availability_type', '!=', 'hour_range')]}"/>
                                         <div attrs="{'invisible': [('customer_availability_type', '!=', 'hour_range')]}" class="oe_inline">
                                                <strong><span>DE:   </span></strong>
                                                <field name="customer_av_hour_start" class="oe_inline" />
                                                <field name="customer_av_min_start" class="oe_inline" />
                                         </div>
                                         <div attrs="{'invisible': [('customer_availability_type', '!=', 'hour_range')]}" class="oe_inline">
                                                <strong><span>HASTA:   </span></strong>
                                                <field name="customer_av_hour_end" class="oe_inline" />
                                                <field name="customer_av_min_end" class="oe_inline" />
                                         </div>
                                     </group>
                                    <field name="customer_availability_info" nolabel="1" attrs="{'invisible': [('customer_availability_type', '!=', 'week_availability')]}"
                                    />
                                </group>
                                <group string="Proximo trabajo activo" attrs="{'invisible': [('next_active_job_id', '=', False)]}">
                                    <group>
                                        <field name="next_active_job_id" nolabel="1" readonly="1" />
                                    </group>
                                    <group>
                                        <field name="next_active_job_date" string="Fecha" readonly="1" />
                                    </group>
                                </group>
                            </page>
                            <page name="tickets" string="Servicio Asistencia">
                        <group>
                            <field name="active_ticket_count"/>
                        </group>
                        <field name="helpdesk_ticket_ids">
                            <tree>
                                <field name="name"/>
                                <field name="team_id"/>
                                <field name="address_label"/>
                                <field name="next_active_job_id"/>
                                <field name="next_active_job_date" widget="remaining_days"/>
                                <field name="stage_id"/>
                            </tree>
                        </field>
                    </page>
                            <page string="Contactos y direcciones" name="contact_addresses" autofocus="autofocus">
                                <field name="partner_child_ids" mode="kanban" context="{'default_parent_id': partner_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_lang': lang_id, 'default_user_id': user_id, 'default_type': 'other'}">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="color"/>
                                        <field name="name"/>
                                        <field name="title"/>
                                        <field name="type"/>
                                        <field name="email"/>
                                        <field name="parent_id"/>
                                        <field name="is_company"/>
                                        <field name="function"/>
                                        <field name="phone"/>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="zip"/>
                                        <field name="city"/>
                                        <field name="country_id"/>
                                        <field name="mobile"/>
                                        <field name="state_id"/>
                                        <field name="image_128"/>
                                        <field name="avatar_128"/>
                                        <field name="lang"/>
                                        <!-- fields in form x2many view to diminish requests -->
                                        <field name="comment"/>
                                        <field name="display_name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                                <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                    <div class="o_kanban_image">
                                                        <img alt="Contact image" t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <field name="name"/>
                                                        <div t-if="record.function.raw_value"><field name="function"/></div>
                                                        <div t-if="record.email.raw_value"><field name="email" widget="email"/></div>
                                                        <div t-if="record.type.raw_value != 'contact'">
                                                            <div>
                                                                <field name="zip"/>
                                                                <field name="city"/>
                                                            </div>
                                                            <field t-if="record.state_id.raw_value" name="state_id"/>
                                                            <field name="country_id"/>
                                                        </div>
                                                        <div t-if="record.phone.raw_value">Phone: <t t-esc="record.phone.value"/></div>
                                                        <div t-if="record.mobile.raw_value">Mobile: <t t-esc="record.mobile.value"/></div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                    <form string="Contact / Address">
                                        <sheet>
                                            <!-- parent_id and type fields needed in attrs in base_address_city module which overwrites
                                            _fields_view_get() of partner. It would be better to put those fields there but the web client
                                            dosen't support when a field is displayed several times in the same view.-->
                                            <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                                            <field name="parent_id" invisible="1"/>
                                            <hr/>
                                            <group>
                                                <group>
                                                    <field name="name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                                                    <field name="title" options="{'no_open': True}" placeholder="e.g. Mr." attrs="{'invisible': [('type','!=', 'contact')]}"/>
                                                    <field name="function" placeholder="e.g. Sales Director" attrs="{'invisible': [('type','!=', 'contact')]}"/>
                                                    <label for="street" string="Address" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                                    <div attrs="{'invisible': [('type','=', 'contact')]}">
                                                        <div class="o_address_format" name="div_address">
                                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                            <field name="city" placeholder="City" class="o_address_city"/>
                                                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                            <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                        </div>
                                                    </div>
                                                </group>
                                                <group>
                                                    <field name="email" widget="email"/>
                                                    <field name="phone" widget="phone"/>
                                                    <field name="mobile" widget="phone"/>
                                                    <field name="company_id" invisible="1"/>
                                                </group>
                                            </group>
                                            <group>
                                                <field name="comment" placeholder="Internal notes..."/>
                                            </group>
                                            <field name="lang" invisible="True"/>
                                            <field name="user_id" invisible="True"/>
                                        </sheet>
                                    </form>
                                </field>
                            </page>

                            <page name="extra_data" string="Información Extra" attrs="{'invisible': [('type', '=', 'lead')]}">
                                <group>
                                    <group string="Información del contacto">
                                        <field name="partner_name" readonly="0" force_save="1"/>
                                        <label for="street_page_lead" string="Dirección"/>
                                        <div class="o_address_format">
                                            <field name="street" id="street_page_lead" placeholder="Street..." class="o_address_street" readonly="0" force_save="1"/>
                                            <field name="street2" placeholder="Street 2..." class="o_address_street" readonly="0" force_save="1"/>
                                            <field name="city" placeholder="City" class="o_address_city" readonly="0" force_save="1"/>
                                            <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' readonly="0" force_save="1"/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip" readonly="0" force_save="1"/>
                                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' readonly="0" force_save="1"/>
                                        </div>
                                        <field name="website" widget="url" placeholder="e.g. https://www.odoo.com" readonly="1" force_save="1"/>
                                        <field name="lang_id" options="{'no_create': True}" readonly="1" force_save="1"/>
                                    </group>
                                    <group class="mt48">
                                        <label for="contact_name_page_lead"/>
                                        <div class="o_row">
                                            <field name="contact_name" id="contact_name_page_lead" readonly="1" force_save="1"/>
                                            <field name="title" placeholder="Title" domain="[]" options='{"no_open": True}' readonly="1" force_save="1"/>
                                        </div>
                                        <field name="function" readonly="1" force_save="1"/>
                                    </group>
                                    <group string="Marketing">
                                        <field name="campaign_id" />
                                        <field name="medium_id"/>
                                        <field name="source_id" />
                                        <field name="type_of_client"/>
                                        <field name="referred_professional" context="{'default_professional':True}"/>

                                    </group>
                                    <group string="Misc" name="Misc">
                                        <field name="message_bounce" readonly="1"/>
                                        <field name="date_open"/>
                                        <field name="date_conversion"/>
                                        <field name="date_closed"/>
                                        <field name="force_close_date"/>
                                        <field name="type" invisible="1"/>
                                        <field name="last_email_from_partner"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Órdenes de trabajo" attrs="{'invisible':[('type','=','lead')]}">
                                <group>
                                    <field name="total_job_minutes" string="Min totales registrados"/>
                                </group>
                                <field name="show_technical_schedule_job_ids" readonly="1">
                                    <tree create="0" delete="0" editable="False">
                                        <field name="job_type_id"/>
                                        <field name="minutes_in_job" string="Min registrados" readonly="1"/>
                                        <field name="job_employee_ids" widget="many2many_tags"/>
                                        <field name="job_vehicle_ids" widget="many2many_tags"/>
                                        <field name="date_schedule"/>
                                        <field name="job_duration"/>
                                        <field name="job_status" widget="badge"/>
                                        <field name="date_status" widget="remaining_days"/>
                                        <field name="user_id"/>
                                        <button name="open_in_calendar_view" type="object" icon="fa-calendar"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter" style="display:block;">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </xpath>
        </field>
    </record>
</odoo>